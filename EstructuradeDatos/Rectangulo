public class Rectangulo
{
    private double largo; 
    private double ancho; 

/// <summary>
/// Contructor de la clase rectangulo
/// </summary>
/// <param name="_largo">Ingrese el largo del rectangulo en decimales.</param>
/// <param name="_ancho">Ingrese el Ancho del rectangulo en decimales.</param>
    public Rectangulo (double largo, double ancho){ 
        this.largo = largo; 
        this.ancho = ancho;
    }
/// <summary>
/// Devuelve un decimal con el area de un rectangulo 
/// </summary>
/// <returns>Decimal</returns>   
    public double Area(){
        return largo * ancho; 
    }
        /// <summary>
    /// Calcula y devuelve el perímetro del rectángulo.
    /// </summary>
    /// <returns>El perímetro del rectángulo.</returns>
    public double Perimetro()
    {
        return 2 * (largo + ancho);
    }
}
}